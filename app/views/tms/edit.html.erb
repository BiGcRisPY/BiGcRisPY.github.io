<!-- Validation failure messages -->
<% if @tm.errors.any? %>
  <% @tm.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tm #<%= @tm.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_tm/<%= @tm.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for move_id -->
      <div class="form-group">
        <label for="move_id" class="control-label">
          Move
        </label>

        <input type="text" id="move_id" name="move_id" placeholder="Move" class="form-control" value="<%= @tm.move_id %>">
      </div>

      <button class="btn btn-warning">
        Update Tm
      </button>
      or
      <a href="/tms/<%= @tm.id %>">Cancel</a>
    </form>
  </div>
</div>
