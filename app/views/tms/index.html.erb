<div class="page-header">
  <h1>
    TM List
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>TM</th>
        <th>Move</th>
        <th>Effect</th>
      </tr>

      <% @tms.each do |tm| %>

      <% if tm.id < 10 %>
        <% z = "#0" %>
      <% else %>
        <% z = "#" %>
      <% end %>

      <tr>
        <td><%= z+ tm.id.to_s %></td>
        <td><%= tm.move.name %></td>
        <td><%= tm.move.effect %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
