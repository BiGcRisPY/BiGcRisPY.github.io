<div class="page-header">
  <h1>
    Pokemon
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Index</th>
        <th>Pokemon</th>
        <th>Evolution Level</th>
        <th>Evolution Outcome</th>
      </tr>

      <% @pokemons.each do |p| %>

      <% if p.id < 10 %>
       <% z = "00" %>
      <% elsif p.id < 100 %>
        <% z = "0" %>
      <% else %>
        <% z = "" %>
      <% end %>

      <tr>
        <td><%= "#" + z + p.id.to_s %></td>
        <td><a href="/pokemons/<%= p.id %>"><%= p.creature %></a></td>
        <td><%= p.evo_level %></td>
        <% if p.evo_outcome.to_i != 0 && p.id != 133 %>
          <td><a href="/pokemons/<%= @pokemons.find(p.evo_outcome.to_i).id %>"><%= @pokemons.find(p.evo_outcome.to_i).creature %></a></td>
        <% elsif p.id == 133 %>
          <td><dl>
            <dd><a href="/pokemons/134">Vaporeon</a></dd>
            <dd><a href="/pokemons/135">Jolteon</a></dd>
            <dd><a href="/pokemons/136">Flareon</a></dd>
          </dl></td>
        <% else %>
            <td><%= p.evo_outcome %></td>
        <% end %>
        <td>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
