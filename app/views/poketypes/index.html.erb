<div class="page-header">
  <h1>
    Poketypes
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Pokemon</th>
        <th>Type</th>
        <th>Actions</th>
      </tr>

      <% @poketypes.each do |poketype| %>
      <tr>
        <td><%= poketype.pokemon.creature %></td>
        <td><%= poketype.type.title %></td>
        <td>
          <a href="/poketypes/<%= poketype.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
