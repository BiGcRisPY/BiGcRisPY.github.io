<!-- Validation failure messages -->
<% if @pokedex.errors.any? %>
  <% @pokedex.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Pokedex #<%= @pokedex.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_pokedex/<%= @pokedex.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for pokemon_id -->
      <div class="form-group">
        <label for="pokemon_id" class="control-label">
          Pokemon
        </label>

        <input type="text" id="pokemon_id" name="pokemon_id" placeholder="Pokemon" class="form-control" value="<%= @pokedex.pokemon_id %>">
      </div>

      <!-- Label and input for nickname -->
      <div class="form-group">
        <label for="nickname" class="control-label">
          Nickname
        </label>

        <input type="text" id="nickname" name="nickname" placeholder="Nickname" class="form-control" value="<%= @pokedex.nickname %>">
      </div>

      <!-- Label and input for current_level -->
      <div class="form-group">
        <label for="current_level" class="control-label">
          Current level
        </label>

        <input type="text" id="current_level" name="current_level" placeholder="Current level" class="form-control" value="<%= @pokedex.current_level %>">
      </div>

      <!-- Label and input for trainer_id -->
      <div class="form-group">
        <label for="trainer_id" class="control-label">
          Trainer
        </label>

        <input type="text" id="trainer_id" name="trainer_id" placeholder="Trainer" class="form-control" value="<%= @pokedex.trainer_id %>">
      </div>

      <button class="btn btn-warning">
        Update Pokedex
      </button>
      or
      <a href="/pokedexes/<%= @pokedex.id %>">Cancel</a>
    </form>
  </div>
</div>
